{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "noEmitHelpers": true,
        "outDir": ".tmp",
        "watch": true
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./src/public/**/*.ts",
        "!./src/packages/**"
    ],
    "files": [
        "./src/client/src.ts",
        "./src/server/test.ts"
    ]
}
